.layer-wrapper{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5)
}
.give-layer .layer-main{
    position: fixed;
    left: 50%;
    top:50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    width:550rpx;
    border-radius: 15rpx;
    padding: 20rpx;
  }
  .layer-title{
    text-align: center;
    margin-bottom: 20rpx;
    position: relative;
  }
  .layer-title .btn-close{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 0;
    top: 0;
    font-size: 40rpx;
    font-weight: 100;
    color:#aaa;
    transform: scaleX(1.2)
  }
  .coupon-option{
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #222;
  }
  .coupon-option text{
    margin-bottom: 15rpx;
  }
  .coupon-option input, .coupon-option textarea{
    width: 100%;
    border-radius: 10rpx;
    border: 1rpx solid #eee;
    padding: 0 10rpx;
    box-sizing: border-box;
  }
  .coupon-option .date-picker{
    font-size: 26rpx;
    color: #444;    
  }
  .picker-wrapper{
    padding-left: 20rpx;
  }
  .btn-confirm{
    text-align: center
  }
  .placeholder{
    color: #ccc;
    font-size: 24rpx;
  }