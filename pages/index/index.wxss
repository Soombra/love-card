.list-item{
  height: 140rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
}
.main{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.main > .avatar {
  float: left;
  height: 120rpx;
  width: 120rpx;
  border-radius: 120rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.main > .avatar> image{
  width: 100%;
  height: 100%
}
.main > .info{
  float: left;
}
.give{
  padding:0 20rpx;
  display: flex;
  align-items: center;
}
.list-empty{
  margin-top: 50%;
  text-align: center;
}