<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo"   bindgetuserinfo="getUserInfo"> 请点击登录 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatar}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickname}}</text>
      <view class='info-item'><navigator url='/pages/coupons/coupons?type=gifts'>我收到的券</navigator></view>
      <view class='info-item'><navigator url='/pages/coupons/coupons?type=offers'>我赠送的券</navigator></view>
    </block>
  </view>
</view>